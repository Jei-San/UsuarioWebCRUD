@page "/userlist"
@inject HttpClient Http
@inject NavigationManager navigationManager
@using UserWebCRUD.Shared;

<h1>User List</h1>
<br />
<p>
    <a href="adduser">Create a New User</a>
</p>
@if (usersList == null)
{
    <text>Loading...</text>
}
else
{
    <div class="container mb-3 mt-3">
        <table class="table table-striped table-bordered mydatatable" style="width:100%">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in usersList)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>
                            <a class="btn btn-success" href="edituser/@user.UserId">Edit</a>
                            <a class="btn btn-danger"  href="/deleteuser/@user.UserId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
@code {
    UserInfo[] usersList;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    async Task LoadData()
    {
        usersList = await Http.GetFromJsonAsync<UserInfo[]>("api/UserInfoes");
    }
}
